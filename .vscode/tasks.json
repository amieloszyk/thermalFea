{
    "version": "2.0.0",
    "command": "g++",
    "isShellCommand": true,
    "showOutput": "always",
    "args": [],
    "echoCommand": true,
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "debugTestMain",
            "args": [
                "-g",
                "testMain.cpp",
                "-o",
                "runTestMain"
            ]
        },
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ]
}